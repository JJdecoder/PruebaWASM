@page "/todo"
@inject ILocalStorageService localStorage

<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            @todo.Title
        </li>
    }
</ul>

<input placeholder="Algo para hacer" @bind="newTodo" />
<button @onclick="AddTodo">Agregar tarea</button>
<button @onclick="GrabarTareas">Grabar tareas</button>

@code {
    private List<TodoItem> todos = new();
    private string? newTodo;


    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
    private async Task GrabarTareas()
    {
        if (todos.Count > 0)
        {
           await localStorage.SetItemAsync("todoList", todos);

        }
    }
    private async Task CargarTareas()
    {
        if (todos.Count > 0)
        {
            var temptodos = await localStorage.GetItemAsync<string>("todoList");
                
            todos = new List<TodoItem>(temptodos);

        }
    }
}